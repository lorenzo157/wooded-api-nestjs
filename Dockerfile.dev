# Development Dockerfile
FROM node:22-alpine

# Install nodemon globally for better file watching
RUN npm install -g nodemon

# Set working directory
WORKDIR /usr/src/app

# Copy package.json and package-lock.json
COPY package*.json ./

# Install ALL dependencies (including devDependencies)
RUN npm install

# Copy source code
COPY . .

# Create a non-root user
RUN addgroup -g 1001 -S nodejs && \
    adduser -S nestjs -u 1001

# Change ownership of the app directory to the nodejs user
RUN chown -R nestjs:nodejs /usr/src/app
USER nestjs

# Expose port 3000
EXPOSE 3000

# Set environment variable for better file watching on Windows
ENV CHOKIDAR_USEPOLLING=true
ENV CHOKIDAR_INTERVAL=300

# Start with nodemon for more reliable file watching
CMD ["nodemon", "--exec", "npm", "run", "start:debug"]
